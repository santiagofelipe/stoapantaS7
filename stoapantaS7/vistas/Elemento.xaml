<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stoapantaS7.vistas.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR Y ELIMINAR " FontSize="20" HorizontalTextAlignment="Center"/>

            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Contraseña"/>

            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>