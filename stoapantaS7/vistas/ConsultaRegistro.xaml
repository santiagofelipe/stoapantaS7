<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stoapantaS7.vistas.ConsultaRegistro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Lista Estudiante" FontSize="20" HorizontalTextAlignment="Center"/>

            <ListView x:Name="listaEstudiante" ItemSelected="listaEstudiante_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Usuario}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>