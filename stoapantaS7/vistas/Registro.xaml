<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stoapantaS7.vistas.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Registro" HorizontalTextAlignment="Center" FontSize="24"/>

            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese el contraseña"/>

            <Button x:Name="btnIngresar" Text="Insertar" Clicked="btnIngresar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>